<!--会員一覧、会員検索結果一覧ページで使う-->
<table class="table">

  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>投稿数</th>
      <th>コメント数</th>
    </tr>
  </thead>

  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= link_to user.name, admin_user_path(user) %></td>
        <td><%= user.stores.count %></td>
        <td><%= user.comments.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>