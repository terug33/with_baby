<h3 class="mb-4">会員一覧ページ</h3>

<!--ユーザーを検索するフォーム-->
<div class="mb-4">
  <%= form_with url: search_admin_users_path, method: :get, local: true do |f| %>
    <%= f.label :keyword, "ユーザー検索" %>
    <%= f.text_field :keyword, placeholder: "ユーザー名" %>
    <%= f.submit "検索", class: "btn btn-primary" %>
  <% end %>
</div>

<!--会員一覧の表-->
<%= render 'admin/shared/user_list', users: @users %>