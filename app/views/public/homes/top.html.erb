<div class="row mb-5">
  <div class="col-md-12">
    <div class="position-relative">
      <%= image_tag 'top.png', class: 'img-fluid', style: 'width: 100%; height: 50vh; object-fit: cover;' %>
      <div class="position-center position-absolute translate-middle text-center w-75">
        <div class="bg-opacity-50 p-4 rounded text-white">
          <p class="fw-bold fs-4">赤ちゃんを連れた方がお店を探すサイトです</p>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <aside class="col-md-3 order-md-1 order-1 mb-4">
    <%= render 'public/shared/category_sidebar', categories: @categories %>
  </aside>

  <main class="col-md-9 order-md-2 order-2">
    <h4 class="mb-4 ml-4">新着店舗</h4>
    <%= render 'public/shared/shop_card_list', stores: @stores %>
  </main>
</div>

