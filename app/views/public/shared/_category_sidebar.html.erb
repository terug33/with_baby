<!--サイドバーのカテゴリー一覧-->

<ul class="list-group">
  <% categories.each do |cat| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to cat.name, category_path(cat) %>
      <span class="badge badge-secondary badge-pill">
        <%= cat.stores.count %>
      </span>
  <% end %>
</ul>